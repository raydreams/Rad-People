{% comment %}
  Announcement Bar - Customizable banner at top of page
{% endcomment %}

{% if settings.announcement_bar_enabled %}
  <div class="announcement-bar" style="background-color: #000; color: #fff; padding: 0.5rem 0; text-align: center; position: fixed; top: 40px; left: 0; right: 0; z-index: 999; width: 100%;">
    <div class="announcement-bar-content" style="max-width: 1200px; margin: 0 auto; padding: 0 1rem;">
      <p style="font-family: 'Helvetica Neue LT Com', sans-serif; font-size: 0.75rem; text-transform: uppercase; margin: 0; letter-spacing: 0.1em;">
        {{ settings.announcement_bar_text | default: "Welcome to RADPEOPLE" }}
      </p>
    </div>
  </div>
  <div class="announcement-bar-spacer" style="height: 40px; margin-top: 40px;"></div>
{% endif %}
