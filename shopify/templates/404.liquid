{% comment %}
  404 Not Found Page Template
{% endcomment %}

<div class="page-wrapper" style="min-height: calc(100vh - 40px); background-color: white; position: relative; top: 40px; display: flex; align-items: center; justify-content: center;">
  <div class="error-page-container" style="background-color: white; padding: 3rem; max-width: 800px; width: 90%;">
    <div class="error-header" style="background-color: black; color: white; padding: 1.5rem 2rem; margin: -3rem -3rem 2rem -3rem; display: flex; justify-content: space-between; align-items: center;">
      <h1 style="margin: 0; font-family: 'Helvetica Neue LT Com', sans-serif; font-size: 1.2rem; font-weight: normal; text-transform: uppercase;">Not Found</h1>
      <span style="font-size: 1.2rem; font-weight: bold; font-family: 'Helvetica Neue LT Com', sans-serif;">404</span>
    </div>
    
    <div class="error-content" style="color: black; font-family: 'Helvetica Neue LT Com', sans-serif;">
      <p style="margin: 0 0 1rem 0; font-size: 1rem; text-transform: uppercase;">The page you were looking for does not exist.</p>
      <p style="margin: 0 0 2rem 0; font-size: 0.9rem; color: #666;">Maybe you want to try the search instead?</p>
      
      <div class="error-search" style="display: flex; gap: 0.5rem; margin-bottom: 2rem;">
        <input 
          type="text" 
          id="errorSearchInput"
          placeholder="Search..." 
          style="flex: 1; padding: 0.75rem 1rem; border: 1px solid #ddd; font-family: 'Helvetica Neue LT Com', sans-serif; font-size: 0.9rem;"
          onkeypress="if(event.key === 'Enter') { window.location.href = '/search?q=' + encodeURIComponent(this.value); }"
        />
        <button 
          onclick="window.location.href = '/search?q=' + encodeURIComponent(document.getElementById('errorSearchInput').value)"
          style="padding: 0.75rem 1.5rem; background-color: #888; color: white; border: none; cursor: pointer; font-family: 'Helvetica Neue LT Com', sans-serif; font-size: 0.9rem; text-transform: uppercase;"
        >
          Search
        </button>
      </div>
      
      <div class="error-links" style="display: flex; gap: 1rem; align-items: center; font-size: 0.9rem; color: #666;">
        <a href="/" style="color: #1404FB; text-decoration: underline;">Back to RADPEOPLE</a>
        <span style="color: #ccc;">|</span>
        <a href="javascript:history.back()" style="color: #1404FB; text-decoration: underline;">previous page</a>
      </div>
    </div>
  </div>
</div>

<style>
  .error-page-container {
    animation: fadeIn 0.3s ease-in;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .error-search button:hover {
    background-color: #666 !important;
  }
  
  .error-links a:hover {
    color: #0a03d9 !important;
  }
</style>

