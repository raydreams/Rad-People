{% comment %}
  Page template - for About, Events, Gallery, Clients pages
{% endcomment %}

{% if page %}
  <div class="page-wrapper" style="min-height: calc(100vh - 40px); background-color: white; position: relative; top: 40px;">
    <div class="page-content">
      {% if page.handle == 'about' %}
        {% render 'page-about' %}
      {% elsif page.handle == 'events' %}
        {% render 'page-events' %}
      {% elsif page.handle == 'gallery' %}
        {% render 'page-gallery' %}
      {% elsif page.handle == 'clients' %}
        {% render 'page-clients' %}
      {% else %}
        <div class="page-content-inner">
          {{ page.content }}
        </div>
      {% endif %}
    </div>
  </div>
{% else %}
  {% comment %} Page not found - redirect to 404 {% endcomment %}
  <div class="page-wrapper" style="min-height: calc(100vh - 40px); background-color: #f5f5f5; position: relative; top: 40px; display: flex; align-items: center; justify-content: center;">
    <div class="error-page-container" style="background-color: white; padding: 3rem; border-radius: 8px; max-width: 600px; width: 90%; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
      <div class="error-header" style="background-color: black; color: white; padding: 1.5rem; margin: -3rem -3rem 2rem -3rem; border-radius: 8px 8px 0 0; display: flex; justify-content: space-between; align-items: center;">
        <h1 style="margin: 0; font-family: 'Sequel Sans Regular', sans-serif; font-size: 1.5rem; font-weight: normal;">Not Found</h1>
        <span style="font-size: 1.2rem; font-weight: bold;">404</span>
      </div>
      
      <div class="error-content" style="color: black; font-family: 'Sequel Sans Regular', sans-serif;">
        <p style="margin: 0 0 1rem 0; font-size: 1.1rem;">The page you were looking for does not exist.</p>
        <p style="margin: 0 0 2rem 0; font-size: 1rem; color: #666;">Maybe you want to try the search instead?</p>
        
        <div class="error-search" style="display: flex; gap: 0.5rem; margin-bottom: 2rem;">
          <input 
            type="text" 
            id="errorSearchInput"
            placeholder="Search..." 
            style="flex: 1; padding: 0.75rem 1rem; border: 1px solid #ddd; border-radius: 4px; font-family: 'Sequel Sans Regular', sans-serif; font-size: 1rem;"
            onkeypress="if(event.key === 'Enter') { window.location.href = '/search?q=' + encodeURIComponent(this.value); }"
          />
          <button 
            onclick="window.location.href = '/search?q=' + encodeURIComponent(document.getElementById('errorSearchInput').value)"
            style="padding: 0.75rem 1.5rem; background-color: #888; color: white; border: none; border-radius: 4px; cursor: pointer; font-family: 'Sequel Sans Regular', sans-serif; font-size: 1rem;"
          >
            Search
          </button>
        </div>
        
        <div class="error-links" style="display: flex; gap: 1rem; align-items: center; font-size: 0.9rem; color: #666;">
          <a href="/" style="color: #1404FB; text-decoration: underline;">Back to RADPEOPLE</a>
          <span style="color: #ccc;">|</span>
          <a href="javascript:history.back()" style="color: #1404FB; text-decoration: underline;">previous page</a>
        </div>
      </div>
    </div>
  </div>
{% endif %}

<style>
  .page-wrapper {
    min-height: calc(100vh - 40px);
    padding: 0;
    background-color: white;
    position: relative;
    top: 40px;
  }

  .page-content {
    width: 100%;
    margin: 0;
    color: black;
  }

  .page-content-inner {
    font-family: 'Sequel Sans Regular', sans-serif;
    line-height: 1.6;
    padding: 40px 20px;
  }
</style>

