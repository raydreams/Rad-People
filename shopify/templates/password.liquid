{% comment %}
  Password Page - Modern redesign with countdown timer
{% endcomment %}

<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ shop.name }} - {{ 'general.password_page.opening_soon' | t }}</title>
  <meta name="description" content="{{ shop.description }}">
  {{ 'theme.css.liquid' | asset_url | stylesheet_tag }}
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html, body {
      height: 100%;
      overflow: hidden;
    }

    body {
      font-family: 'Helvetica Neue LT Com', sans-serif;
      background-color: #000;
      color: #fff;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      min-height: 100vh;
    }

    .password-background {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 0;
      background: radial-gradient(circle at 30% 50%, rgba(20, 4, 251, 0.15) 0%, transparent 50%),
                  radial-gradient(circle at 70% 80%, rgba(20, 4, 251, 0.1) 0%, transparent 50%);
      animation: pulse 8s ease-in-out infinite;
    }

    @keyframes pulse {
      0%, 100% { opacity: 0.6; }
      50% { opacity: 1; }
    }

    .password-container {
      position: relative;
      z-index: 1;
      max-width: 600px;
      width: 90%;
      text-align: center;
      padding: 2rem;
    }

    .password-logo {
      font-family: 'NF Ultra', sans-serif;
      font-size: clamp(4rem, 12vw, 8rem);
      color: #fff;
      text-transform: uppercase;
      letter-spacing: 0.15em;
      margin-bottom: 3rem;
      line-height: 1.1;
    }

    .password-message {
      font-family: 'Helvetica Neue LT Com', sans-serif;
      font-size: clamp(1.1rem, 4vw, 1.6rem);
      text-transform: uppercase;
      margin-bottom: 2rem;
      line-height: 1.5;
      color: #fff;
      font-weight: bold;
    }

    .countdown-section {
      margin-bottom: 3rem;
      padding: 1.5rem;
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
    }

    .countdown-message {
      font-family: 'Helvetica Neue LT Com', sans-serif;
      font-size: clamp(0.9rem, 3vw, 1.1rem);
      text-transform: uppercase;
      color: #fff;
      margin-bottom: 1rem;
      opacity: 0.9;
    }

    .countdown-display {
      font-family: 'NF Ultra', sans-serif;
      font-size: clamp(2rem, 8vw, 4rem);
      color: #1404FB;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      line-height: 1.2;
    }

    .countdown-unit {
      font-family: 'Helvetica Neue LT Com', sans-serif;
      font-size: clamp(0.7rem, 2.5vw, 1rem);
      text-transform: uppercase;
      color: rgba(255, 255, 255, 0.7);
      margin-top: 0.5rem;
      display: block;
    }

    .password-form-wrapper {
      margin-bottom: 2rem;
    }

    .password-form {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      max-width: 400px;
      margin: 0 auto;
    }

    .password-input {
      padding: 1.2rem 1.5rem;
      background-color: rgba(255, 255, 255, 0.95);
      color: #000;
      border: 2px solid rgba(255, 255, 255, 0.3);
      font-family: 'Helvetica Neue LT Com', sans-serif;
      font-size: 1rem;
      text-transform: uppercase;
      width: 100%;
      transition: all 0.3s ease;
    }

    .password-input:focus {
      outline: none;
      border-color: #1404FB;
      background-color: #fff;
      box-shadow: 0 0 20px rgba(20, 4, 251, 0.3);
    }

    .password-input::placeholder {
      color: #666;
      text-transform: none;
    }

    .password-button {
      padding: 1.2rem 2rem;
      background-color: #1404FB;
      color: #fff;
      border: 2px solid #1404FB;
      font-family: 'Helvetica Neue LT Com', sans-serif;
      font-size: 1rem;
      text-transform: uppercase;
      cursor: pointer;
      transition: all 0.3s ease;
      width: 100%;
      font-weight: bold;
      letter-spacing: 0.1em;
    }

    .password-button:hover {
      background-color: #0a03d9;
      border-color: #0a03d9;
      transform: translateY(-2px);
      box-shadow: 0 5px 20px rgba(20, 4, 251, 0.4);
    }

    .password-button:active {
      transform: translateY(0);
    }

    .password-errors {
      margin-top: 1rem;
      color: #ff4444;
      font-family: 'Helvetica Neue LT Com', sans-serif;
      font-size: 0.9rem;
      text-transform: uppercase;
      min-height: 1.5rem;
    }

    .password-footer {
      margin-top: 3rem;
      padding-top: 2rem;
      border-top: 1px solid rgba(255, 255, 255, 0.2);
    }

    .password-footer-text {
      font-family: 'Sequel Sans Regular', sans-serif;
      font-size: 0.85rem;
      color: rgba(255, 255, 255, 0.6);
      text-transform: none;
    }

    .password-footer-link {
      color: #1404FB;
      text-decoration: underline;
      transition: color 0.3s ease;
    }

    .password-footer-link:hover {
      color: #0a03d9;
    }

    @media (max-width: 768px) {
      .password-container {
        padding: 1rem;
      }

      .password-logo {
        margin-bottom: 2rem;
      }

      .password-message {
        margin-bottom: 1.5rem;
      }

      .countdown-section {
        padding: 1rem;
      }
    }
  </style>
</head>
<body>
  <div class="password-background"></div>
  
  <div class="password-container">
    <h1 class="password-logo">RADPEOPLE</h1>
    
    <p class="password-message">
      We're stocking up.<br>
      Enter password to continue.
    </p>

    {% if settings.password_countdown_date != blank %}
      <div class="countdown-section">
        <div class="countdown-message">
          {{ settings.password_countdown_message | default: "NEXT DROP IN" }}
        </div>
        <div id="countdown" class="countdown-display">
          <span id="countdown-time">00:00:00:00</span>
          <span class="countdown-unit">DAYS : HOURS : MINUTES : SECONDS</span>
        </div>
      </div>
    {% endif %}

    {% form 'storefront_password', class: 'password-form' %}
      <input
        type="password"
        name="password"
        placeholder="Password"
        class="password-input"
        autofocus
        autocomplete="current-password"
      >
      <button type="submit" class="password-button">
        Enter
      </button>
      
      <div class="password-errors">
        {% if form.errors %}
          {{ form.errors | default_errors }}
        {% endif %}
      </div>
    {% endform %}

    <div class="password-footer">
      <p class="password-footer-text">
        Are you the store owner? 
        <a href="/admin" class="password-footer-link">Log in here</a>
      </p>
    </div>
  </div>

  <script>
    {% if settings.password_countdown_date != blank %}
      function startCountdown() {
        const countdownDate = new Date('{{ settings.password_countdown_date }}').getTime();
        
        function updateCountdown() {
          const now = new Date().getTime();
          const distance = countdownDate - now;
          
          if (distance < 0) {
            document.getElementById('countdown-time').textContent = '00:00:00:00';
            return;
          }
          
          const days = Math.floor(distance / (1000 * 60 * 60 * 24));
          const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
          const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
          const seconds = Math.floor((distance % (1000 * 60)) / 1000);
          
          const daysStr = String(days).padStart(2, '0');
          const hoursStr = String(hours).padStart(2, '0');
          const minutesStr = String(minutes).padStart(2, '0');
          const secondsStr = String(seconds).padStart(2, '0');
          
          document.getElementById('countdown-time').textContent = 
            `${daysStr}:${hoursStr}:${minutesStr}:${secondsStr}`;
        }
        
        updateCountdown();
        setInterval(updateCountdown, 1000);
      }
      
      startCountdown();
    {% endif %}
  </script>
</body>
</html>
