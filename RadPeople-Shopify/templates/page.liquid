{% comment %}
  Page template - for About, Events, Gallery, Clients pages
{% endcomment %}

<div class="page-wrapper">
  <div class="page-content">
    {% if page.handle == 'about' %}
      {% render 'page-about' %}
    {% elsif page.handle == 'events' %}
      {% render 'page-events' %}
    {% elsif page.handle == 'gallery' %}
      {% render 'page-gallery' %}
    {% elsif page.handle == 'clients' %}
      {% render 'page-clients' %}
    {% else %}
      <div class="page-content-inner">
        {{ page.content }}
      </div>
    {% endif %}
  </div>
</div>

<style>
  .page-wrapper {
    min-height: calc(100vh - 40px);
    padding: 40px 20px;
    background-color: white;
  }

  .page-content {
    max-width: 1200px;
    margin: 0 auto;
    color: black;
  }

  .page-content-inner {
    font-family: 'Sequel Sans Regular', sans-serif;
    line-height: 1.6;
  }
</style>

